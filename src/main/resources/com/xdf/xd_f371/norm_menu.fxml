<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="roothb" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xdf.xd_f371.controller.DinhMucPhuongTienController">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Label prefHeight="41.0" prefWidth="163.0" text="Loại xe máy tàu:">
                     <font>
                        <Font name="Cambria Bold" size="16.0" />
                     </font></Label>
                  <RadioButton mnemonicParsing="false" onAction="#xe_selected" prefHeight="41.0" prefWidth="121.0" text="Xe" fx:id="xe_radio">
                     <font>
                        <Font name="Cambria Italic" size="16.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="machine" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="may_radio" layoutX="84.0" layoutY="10.0" mnemonicParsing="false" onAction="#may_selected" prefHeight="41.0" prefWidth="121.0" text="Máy" toggleGroup="$machine">
                     <font>
                        <Font name="Cambria Italic" size="16.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="mb_radio" layoutX="205.0" layoutY="10.0" mnemonicParsing="false" onAction="#maybay_selected" prefHeight="41.0" prefWidth="121.0" text="Máy bay" toggleGroup="$machine">
                     <font>
                        <Font name="Cambria Italic" size="16.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label prefHeight="41.0" prefWidth="106.0" text="Tìm kiếm:">
                     <font>
                        <Font name="Cambria Bold" size="16.0" />
                     </font></Label>
                  <TextField prefHeight="39.0" prefWidth="247.0" style="-fx-background-radius: 25;">
                     <font>
                        <Font name="Cambria" size="18.0" />
                     </font></TextField>
                  <Label layoutX="10.0" layoutY="10.0" prefHeight="41.0" prefWidth="74.0" text="Đơn vị:">
                     <HBox.margin>
                        <Insets left="47.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Cambria Bold" size="16.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="units_cbb" editable="true" onAction="#selectUnit" prefHeight="39.0" prefWidth="313.0" style="-fx-background-color: #ffffff; -fx-border-color: #a8a8a8; -fx-border-radius: 10;">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ComboBox>
                  <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="101.0" style="-fx-border-radius: 10; -fx-background-color: #ffffff; -fx-border-color: #a8a8a8;" text="Chuyển đổi">
                     <HBox.margin>
                        <Insets left="35.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="Cambria Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="pt_tb" onMousePressed="#pt_selected" stylesheets="@css/table_style.css">
              <columns>
                  <TableColumn fx:id="stt" maxWidth="50.0" prefWidth="45.0" resizable="false" text="STT" />
                <TableColumn prefWidth="105.0" text="Tên" fx:id="xmt_name" />
                <TableColumn fx:id="type_name" prefWidth="73.0" text="Loại" />
                  <TableColumn fx:id="tructhuoc" prefWidth="97.0" text="Trực thuộc" />
                  <TableColumn fx:id="quantity" prefWidth="82.0" text="Số lượng" />
                  <TableColumn prefWidth="376.0" text="Định mức">
                     <columns>
                        <TableColumn fx:id="km" prefWidth="100.0" text="Km (Lit/100 km)" />
                        <TableColumn fx:id="h" prefWidth="100.0" text="Giờ (Lit/1 giờ)" />
                        <TableColumn fx:id="md" prefWidth="100.0" text="MĐ (Lit/1 giờ)" />
                        <TableColumn fx:id="tk" prefWidth="100.0" text="TK (Lit/1 giờ)" />
                     </columns>
                  </TableColumn>
                  <TableColumn fx:id="createtime" prefWidth="123.0" text="Thời gian" />
              </columns>
               <VBox.margin>
                  <Insets right="10.0" top="15.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addNewPt" prefHeight="36.0" prefWidth="123.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10; -fx-border-color: #a8a8a8;" text="Thêm">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="Cambria Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</HBox>
