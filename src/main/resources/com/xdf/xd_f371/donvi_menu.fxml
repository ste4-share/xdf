                                          <Cursor fx:constant="TEXT" />
                                       </cursor>
                                       <font>
                                          <Font name="Cambria" size="18.0" />
                                       </font>
                                    </TextField>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="25.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                        <TableView fx:id="tb_unit" onMouseReleased="#unit_clicked" stylesheets="@css/table_style.css">
